{
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": {
        "name": "conventionalcommits",
        "types": [
          {
            "type": "feat",
            "section": "Features"
          },
          {
            "type": "fix",
            "section": "Bug Fixes"
          },
          {
            "type": "cleanup",
            "section": "Cleanup"
          },
          {
            "type": "docs",
            "section": "Documentations"
          }
        ]
      },
      "infile": "CHANGELOG.md"
    },
    "@release-it/bumper": {
      "out": [
        "libs/**/package*.json"
      ]
    }
  },
  "git": {
    "commitMessage": "chore: release ${version}"
  },
  "npm": {
    "publish": false
  },
  "github": {
    "release": true,
    "releaseName": "Release ${version}"
  },
  "hooks": {
    "after:bump": "pnpm run build"
  }
}
